<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</p>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, class: "user-fields", required: true %>
  </div>

  <div class="field form-group">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, class: "user-fields", required: true %>
  </div>

  <div class="field form-group">
    <%= f.label :username %><br>
    <%= f.text_field :username, class: "user-fields", required: true %>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: "user-fields" %>
  </div>

  <% unless user.children? %>
    <div class="field form-group">
      <%= f.label :profileable_type, "User type" %><br>
      <%= f.select :profileable_type, options_for_select(
        [["Employee", "EmployeeProfile"], ["Admin", "AdminProfile"]],
        params[:profileable_type]), class: "user-fields" %>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: "user-fields", required: true %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, class: "user-fields",
      required: true %>
  </div>

  <%= f.submit "Submit", class: "btn btn-default btn-primary",
    id: "submit_user" %>
<% end %>
