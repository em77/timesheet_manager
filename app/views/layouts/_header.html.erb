<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
        data-toggle="collapse" data-target="#navbar-collapse-area"
        aria-expanded="false">
        <img alt="FH" src="<%= image_path("https://s3.amazonaws.com/fountainhouse-bucket/fh-logo.jpg") %>">
      </button>
      <a class="navbar-brand" id="site_title" href="<%= root_path %>">
        Timesheet Portal
      </a>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse-area">

      <% if logged_in? && current_user.is_an_admin? %>

        <ul class="nav navbar-nav navbar-left" class="navbar-buttons">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle"
              data-toggle="dropdown" role="button"
              aria-haspopup="true" aria-expanded="false">
              My Companies <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <% current_admin_user_companies.each do |company| %>
                <% unless company == current_admin_user_companies.first %>
                  <li role="separator" class="divider"></li>
                <% end %>
                <li>
                  <%= link_to company.title,
                    jobs_path(company_id: company.id) %>
                </li>
              <% end %>
            </ul>
          </li>
          <%= render "layouts/navbar_messages_link" %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%= render "layouts/navbar_greeting" %>
        </ul>
      <% elsif logged_in? %>
        <ul class="nav navbar-nav navbar-left" class="navbar-buttons">
          <%= render "layouts/navbar_messages_link" %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%= render "layouts/navbar_greeting" %>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to "Sign in", login_path %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
