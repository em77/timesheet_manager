<div class="css_cell">
  <strong>
    <%= link_to(company.title, jobs_path(company_id: company.id)) %>
  </strong>
</div>
<div class="css_cell">
  <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
</div>
<div class="css_cell">
  <% if company.active? %>
    <% archive_button_text = "Archive Company" %>
    <% archive_button_class = "btn btn-warning" %>
  <% else %>
    <% archive_button_text = "Reactivate Company" %>
    <% archive_button_class = "btn btn-success" %>
  <% end %>
    <%= link_to(archive_button_text,
      change_company_active_status_path(company_id: company.id),
      data: { confirm: "Are you sure you want to change the status of" +
      " #{company.title}?" },
      class: archive_button_class) %>
</div>
<div class="css_cell">
  <div class="btn-group">
    <%= link_to("Edit Company", edit_company_path(company),
      class: "btn btn-info") %>
  </div>
</div>

<% unless company.children? %>
  <div class="css_cell">
    <div class="btn-group">
      <%= link_to("Delete Company", company_path(company),
        data: { :confirm => "Are you sure you want to delete this company?" },
        method: :delete, class: "btn btn-danger") %>
    </div>
  </div>
<% end %>
