<div class="css_cell">
  <strong><%= company.title %></strong>
</div>
<div class="css_cell">
  <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
</div>
<div class="css_cell">
  <div class="btn-group">
    <%= link_to("Edit Company", edit_company_path(company),
      class: "btn btn-info") %>
  </div>
</div>
<div class="css_cell">
  <div class="btn-group">
    <%= link_to("Delete Company", company_path(company),
      data: { :confirm => "Are you sure you want to delete this company?" },
      method: :delete, class: "btn btn-danger") %>
  </div>
</div>
