<% provide(:title, "Companies") %>

<h2>Companies</h2>

<div class="outer_wrapper">
  <div class="btn-group">
    <%= link_to "New Company", new_company_path, class: "btn btn-success",
      id: "new_company_button", method: :get %>
  </div>
    <div class="css_table">
      <div class="css_tbody">
        <% companies.each do |company| %>
          <div class="css_row">
            <%= render company %>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
</div>
