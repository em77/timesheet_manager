<% current_user.profileable.jobs.each do |job| %>
  <% next if job.pay_periods.empty? %>
  <% latest_pay_period = job.pay_periods.where(
    pay_date: job.pay_periods.maximum(:pay_date))[0] %>
  <% next if latest_pay_period.pay_date < Time.zone.now.to_date %>
  <p>
    Next pay date for <%= job.title %> job at <%= job.company.title %>:
    <span class="important-text">
      <%= latest_pay_period.pay_date.strftime("%A, %b %d, %Y") %>
    </span>
  </p>
  <p class="instruction-text">
    Pay period beginning <%= latest_pay_period.start_date %> and ending
    <%= latest_pay_period.end_date %>.
  </p>
<% end %>
