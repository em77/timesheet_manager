<% if timesheets.empty? && !current_user.profileable.companies.empty? %>
  <%= render "new_timesheet_link_form" %>
<% else %>
  <% timesheets.each do |timesheet| %>
    <%= link_to "Clock out from #{timesheet.pay_period.job.company.title}",
      edit_timesheet_path(timesheet),
      class: "btn btn-danger clock_out_button" %>
  <% end %>
<% end %>

<%= render "next_pay_dates" %>
