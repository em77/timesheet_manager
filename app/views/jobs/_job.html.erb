<div class="css_cell">
  <strong><%= job.title %></strong>
</div>
<div class="css_cell">
  <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
</div>
<div class="css_cell">
  <%= job.employee_profile.user.full_name %>
</div>
<div class="css_cell">
  <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
</div>
<div class="css_cell">
  <div class="btn-group">
    <%= link_to("Timesheets", timesheets_path(job_id: job.id),
      class: "btn btn-primary") %>
  </div>
</div>
<div class="css_cell">
  <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
</div>
<div class="css_cell">
  <div class="btn-group">
    <%= link_to("Edit Job", edit_job_path(job),
      class: "btn btn-info") %>
  </div>
</div>
<div class="css_cell">
  <div class="btn-group">
    <%= link_to("Delete Job", job_path(job.to_param, company_id: params[:company_id]),
      data: { :confirm => "Are you sure you want to delete this job?" },
      method: :delete, class: "btn btn-danger") %>
  </div>
</div>
