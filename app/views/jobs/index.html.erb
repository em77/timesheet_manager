<% provide(:title, "Jobs") %>

<div id="jobs-wrapper">
  <div class="panel panel-primary inline-panel">
    <div class="panel-heading">
      <h3 class="panel-title"><%= company.title %> Jobs</h3>
    </div>

    <div id="new-archived-job-buttons-wrapper">
      <div id="new-job-button-wrapper">
        <div class="btn-group">
          <%= link_to "New Job", new_job_path(company_id: params[:company_id]),
            class: "btn btn-success",
            id: "new_job_button", method: :get %>
        </div>
      </div>

      <div id="archived-jobs-button">
        <% if params[:show_inactive] %>
          <%= link_to "Show Active Jobs",
            jobs_path(company_id: params[:company_id]),
            class: "btn btn-primary", id: "show_active_jobs_button",
            method: :get %>
        <% else %>
          <%= link_to "Show Archived Jobs",
            jobs_path(company_id: params[:company_id], show_inactive: true),
            class: "btn btn-warning", id: "show_inactive_jobs_button",
            method: :get %>
        <% end %>
      </div>
    </div>
    <br>

    <div class="css_table" id="jobs-table">
      <div class="css_tbody">
        <% jobs.each do |job| %>
          <div class="css_row">
            <%= render job %>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
    <div class="center pagination_primary">
      <%= will_paginate jobs %>
    </div>
  </div>
</div>
