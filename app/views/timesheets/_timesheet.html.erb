<div class="css_cell">
  <%= link_to timesheet.pay_period.job.company.title,
    jobs_path(company_id: timesheet.pay_period.job.company_id) %>
</div>
<div class="css_cell">
  <%= timesheet.pay_period.job.title %>
</div>
<div class="css_cell">
  <%= EmployeeProfile.find(timesheet.pay_period.job.employee_profile_id)
    .user.full_name %>
</div>
<div class="css_cell">
  <%= timesheet.clock_in.strftime("%b %e, %Y - %l:%M %p") %>
</div>
<div class="css_cell">
  <%= timesheet.clock_out.strftime("%b %e, %Y - %l:%M %p") %>
</div>
<div class="css_cell">
  <%= link_to edit_timesheet_path(timesheet) do %>
    <i class="glyphicon glyphicon-edit"></i>
  <% end %>
</div>
<div class="css_cell">
  <%= ( (timesheet.clock_out - timesheet.clock_in) / 3600 ).round(2) %>
</div>
<div class="css_cell">
  <%= link_to "", approve_timesheet_path(timesheet_id: timesheet.id,
    css_id: status_id_maker(timesheet.id), format: :js),
    class: "btn btn-default status_button #{status_css_maker(timesheet)}",
    id: status_id_maker(timesheet.id), method: "get", remote: true %>
</div>
